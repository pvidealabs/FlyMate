<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:background="@drawable/card_greenborder"
    android:layout_height="180dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:divider="@android:color/transparent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="30dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:text="09:40pm-12:30pm(+1)"
            android:id="@+id/timings"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:text="Air France, Air Asia"
            android:id="@+id/flightNames"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:textSize="20sp"
        android:fontFamily="Arial"
        android:layout_marginLeft="10dp"
        android:text="37h 45m"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:id="@+id/duration"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:fontFamily="Arial"
            android:textColor="#000000"
            android:text="2 stops"
            android:id="@+id/stops"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:fontFamily="Arial"
            android:textAlignment="center"
            android:text="MAA, FRA, IBZ"
            android:textColor="#000000"
            android:id="@+id/stopCities"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>


</LinearLayout>